# ===========================================
# The Fixer Initiative - Environment Variables
# ===========================================
# This file contains all environment variables needed for the project
# Copy this file to .env.local for local development
# Never commit actual secrets to version control

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Production Supabase Project
NEXT_PUBLIC_SUPABASE_URL=https://mxtsdgkwzjzlttpotole.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# NEON DATABASE CONFIGURATION
# ===========================================
# Neon PostgreSQL Database for Payment Services
NEON_DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require
NEON_API_KEY=your_neon_api_key_here

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
# Enable mock authentication for development/demo
NEXT_PUBLIC_USE_MOCK_AUTH=true

# ===========================================
# ECOSYSTEM PROJECT APIs - DEV.CONNECTIONPOINT.TECH
# ===========================================
# SD-Ghost Protocol (Memory-as-a-Service)
NEXT_PUBLIC_SD_GHOST_API_URL=https://dev.connectionpoint.tech/v1/memory

# Agent-Banks (AI Execution Engine)
NEXT_PUBLIC_AGENT_BANKS_API_URL=https://dev.connectionpoint.tech/v1/ai/agent-banks

# Vortexcore.app (Main Platform)
NEXT_PUBLIC_VORTEXCORE_API_URL=https://dev.connectionpoint.tech/v1/apps/vortexcore

# SEFTEC Store (E-commerce Platform)
NEXT_PUBLIC_SEFTEC_STORE_API_URL=https://dev.connectionpoint.tech/v1/apps/seftec-shop

# SUB-PRO (Subscription Management)
NEXT_PUBLIC_SUB_PRO_API_URL=https://dev.connectionpoint.tech/v1/apps/sub-pro

# Task Manager (AI Productivity)
NEXT_PUBLIC_TASK_MANAGER_API_URL=https://dev.connectionpoint.tech/v1/apps/task-manager

# SEFTECHUB (B2B Trade Hub)
NEXT_PUBLIC_SEFTECHUB_API_URL=https://dev.connectionpoint.tech/v1/apps/seftechub

# Logistics Platform (Fleet Management)
NEXT_PUBLIC_LOGISTICS_API_URL=https://dev.connectionpoint.tech/v1/apps/logistics

# SEFTEC SaaS (Enterprise Platform)
NEXT_PUBLIC_SEFTEC_SAAS_API_URL=https://dev.connectionpoint.tech/v1/platform/saas

# ===========================================
# ECOSYSTEM API AUTHENTICATION
# ===========================================
# API Key for accessing ecosystem services
NEXT_PUBLIC_ECOSYSTEM_API_KEY=your_ecosystem_api_key_here

# ===========================================
# PAYMENT PROVIDERS
# ===========================================
# Paystack Configuration
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# Sayswitch Configuration
SAYSWITCH_API_KEY=your_sayswitch_api_key
SAYSWITCH_BASE_URL=https://api.sayswitch.com/v1
SAYSWITCH_WEBHOOK_SECRET=your_sayswitch_webhook_secret

# ===========================================
# INTERNAL VENDOR API
# ===========================================
# Internal API key for client-api function
INTERNAL_VENDOR_API_KEY=pk_live_INTERNAL_keyid.sk_live_secret

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Analytics tracking
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Node environment
NODE_ENV=development

# Next.js configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="The Fixer Initiative Control Room"

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# Production URLs (uncomment for production)
# NEXT_PUBLIC_APP_URL=https://control-room-mhnx9cjuj-thefixers-team.vercel.app
# NODE_ENV=production

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================
# Webhook URLs for payment providers
PAYSTACK_WEBHOOK_URL=https://mxtsdgkwzjzlttpotole.supabase.co/functions/v1/paystack-integration/webhook
SAYSWITCH_WEBHOOK_URL=https://mxtsdgkwzjzlttpotole.supabase.co/functions/v1/sayswitch-integration/webhook

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret for internal authentication
JWT_SECRET=your_jwt_secret_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# ===========================================
# RATE LIMITING
# ===========================================
# API rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CACHING CONFIGURATION
# ===========================================
# Redis configuration for caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ===========================================
# FILE STORAGE
# ===========================================
# AWS S3 configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level configuration
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=./logs/app.log

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# ===========================================
# API VERSIONING
# ===========================================
# API version for ecosystem services
NEXT_PUBLIC_API_VERSION=v1

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,https://dev.connectionpoint.tech

# ===========================================
# DEPLOYMENT NOTES
# ===========================================
# 1. All ecosystem APIs now use dev.connectionpoint.tech domain
# 2. Copy this file to .env.local for local development
# 3. Use Vercel CLI to set production environment variables
# 4. Use Supabase CLI to set edge function secrets
# 5. All NEXT_PUBLIC_ variables are exposed to the browser
# 6. Server-only variables are not prefixed with NEXT_PUBLIC_
# 7. Never commit actual secrets to version control
